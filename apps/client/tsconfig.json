{
	"extends": "../../tsconfig.json",

	"compilerOptions": {
		"target": "ES2017",
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"noEmit": true,
		"module": "esnext",
		"moduleResolution": "bundler",
		"jsx": "preserve",
		"incremental": true,

		"plugins": [
			{
				"name": "next"
			}
		],

		"paths": {
			"@libs/types/*": ["../../libs/types/src/*"],
			"@libs/shared/*": ["../../libs/shared/src/*"],
			"@apps/client/*": ["./src/*"]
		}
	},
	"include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
	"exclude": ["node_modules"]
}
